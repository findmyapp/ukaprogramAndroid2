<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/startmenu_backg2"
>

	<LinearLayout 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_gravity="center"
		android:gravity="center"
		android:layout_centerInParent="true">
		
		<Button 
			android:id="@+id/program"
			android:layout_width="fill_parent" 
			android:layout_height="67px"
			android:layout_marginTop="90dp"
			android:layout_marginBottom="10dp"
			android:background="@drawable/menu_program">
		</Button>
		<Button 
			android:id="@+id/favoritter"
			android:layout_width="fill_parent" 
			android:layout_height="60px"
			android:layout_marginBottom="8dp"
			android:background="@drawable/menu_fav">
		</Button>
		<Button 
			android:id="@+id/login"
			android:layout_width="fill_parent" 
			android:layout_height="56px"
			android:layout_marginBottom="7dp"
			android:background="@drawable/menu_login">
		</Button>
		<Button 
			android:id="@+id/update"
			android:layout_width="fill_parent" 
			android:layout_height="63px"
			android:layout_marginBottom="7dp"
			android:background="@drawable/menu_update">
		</Button>
		<Button 
			android:id="@+id/innstillinger"
			android:layout_width="fill_parent" 
			android:layout_height="46px"
			android:layout_marginBottom="10dp"
			android:background="@drawable/menu_settings"
			android:visibility="gone">
		</Button>

		</LinearLayout>
</RelativeLayout>
