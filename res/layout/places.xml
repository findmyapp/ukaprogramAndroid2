<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background">
	<FrameLayout 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp">
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			<ImageView 
				android:layout_height="wrap_content"
				android:paddingTop="5dp" 
				android:paddingBottom="15dp"
				android:id="@+id/imageView1"
				android:src="@drawable/uka_logo_header" 
				android:layout_width="wrap_content"
				android:layout_gravity="center_horizontal">
			</ImageView>
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<RelativeLayout 
					android:layout_width="fill_parent"
					android:layout_height="45dp"
					android:background="@drawable/round_border_grey"
					android:id="@+id/teste"
					>
					<TextView 
						android:id="@+id/places_name" 
						android:layout_height="wrap_content" 
						android:layout_width="wrap_content"
						style="@style/BigFont"
						android:text="Dødens Dal"
						android:layout_centerInParent="true" />

					<ImageView 
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:id="@+id/event_details_category_header"
						android:src="@drawable/headerplace" 
						android:layout_alignParentLeft="true"
						android:layout_alignParentBottom="true">
					</ImageView>
				</RelativeLayout>	
			</LinearLayout>
			<ScrollView
				android:layout_marginTop="10dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
			<LinearLayout 
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<LinearLayout 
					android:background="@drawable/round_border_grey"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:paddingRight="20dp"
					android:paddingLeft="20dp"
					android:orientation="vertical">
					<ImageView 
						android:layout_width="wrap_content" 
						android:id="@+id/places_map" 
						android:layout_marginTop="10dp"
						android:layout_marginBottom="20dp"
						android:layout_height="wrap_content">
					</ImageView>
					<TextView 
						style="@style/MediumFont"
						android:id="@+id/places_last_played"
						android:text="Forrige: Oktoberfest"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
					<TextView 
						style="@style/MediumFont"
						android:id="@+id/places_playing_next"
						android:text="Neste: Melissa Horn"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="5dp">
					</TextView>
					
		<!-- 			Live reported info from this place -->
					<TextView 
						style="@style/BigFont"
						android:text="Live rapport"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
					</TextView>
						<RelativeLayout 
							android:layout_marginTop="10dp"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content">
							<TextView 
								style="@style/MediumFont"
								android:id="@+id/places_stemning"
								android:text="Stemning: "
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
							<RatingBar
								style="@style/ukaRatingBar" 
								android:layout_width="wrap_content"
								android:id="@+id/places_progressbar_stemning" 
								android:layout_height="40px"
								android:layout_alignParentRight="true"
								/>
						</RelativeLayout>
						<RelativeLayout 
							android:layout_marginTop="5dp"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content">
							<TextView 
								style="@style/MediumFont"
								android:id="@+id/places_dansing"
								android:text="Dansing: "
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
							<RatingBar
								style="@style/ukaRatingBar" 
								android:layout_width="wrap_content"
								android:id="@+id/places_progressbar_dansing" 
								android:layout_height="40px"
								android:layout_alignParentRight="true"
								/>
						</RelativeLayout>
						<RelativeLayout 
							android:layout_marginTop="5dp"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content">
							<TextView 
								style="@style/MediumFont"
								android:id="@+id/places_prating"
								android:text="Prating: "
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
							<RatingBar
								style="@style/ukaRatingBar" 
								android:layout_width="wrap_content"
								android:id="@+id/places_progressbar_prating" 
								android:layout_height="40px"
								android:layout_alignParentRight="true"
							/>
						</RelativeLayout>
						<RelativeLayout 
							android:layout_marginTop="5dp"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content">
							
							<TextView 
								style="@style/MediumFont"
								android:id="@+id/places_sjekking"
								android:text="Sjekking: "
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
							<RatingBar
								style="@style/ukaRatingBar" 
								android:layout_width="wrap_content" 
								android:id="@+id/places_progressbar_sjekking" 
								android:layout_height="40px"
								android:layout_alignParentRight="true"
								>
							</RatingBar>	
						</RelativeLayout>
					</LinearLayout>
		<!--  		Live feed	 	-->
					<LinearLayout 
						android:background="@drawable/round_border_grey"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:paddingRight="20dp"
						android:paddingLeft="20dp"
						android:layout_marginTop="10dp"
						android:orientation="vertical">
						<TextView 
							android:text="Kommentarer:"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"/>
						<ListView android:id="@+id/places_live_feed" 
							android:layout_height="wrap_content"
							android:layout_width="fill_parent" 
							android:footerDividersEnabled="false" 
							android:paddingLeft="10dp"
							android:paddingRight="10dp"
						/>			
					</LinearLayout>
		<!-- 			Report info from this place -->
					<LinearLayout 
						android:background="@drawable/round_border_grey"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:paddingRight="20dp"
						android:paddingLeft="20dp"
						android:orientation="vertical"
						android:layout_marginTop="10dp">
						<TextView 
							style="@style/BigFont"
							android:layout_marginTop="10dp"
							android:text="Rapporter: "
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
						<RelativeLayout 
							android:layout_marginTop="10dp"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content">
						
							<TextView 
								style="@style/MediumFont"
								android:id="@+id/places_stemning"
								android:text="Stemning: "
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
							<RatingBar
								style="@style/ukaRatingBar" 
								android:layout_width="wrap_content" 
								android:id="@+id/places_progressbar_stemning_reported" 
								android:layout_height="40px"
								android:layout_alignParentRight="true"
								>
							</RatingBar>	
						</RelativeLayout>
						<RelativeLayout 
							android:layout_marginTop="10dp"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content">
							
							<TextView 
								style="@style/MediumFont"
								android:id="@+id/places_dansing"
								android:text="Dansing: "
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
							<RatingBar
								style="@style/ukaRatingBar" 
								android:layout_width="wrap_content" 
								android:id="@+id/places_progressbar_dansing_reported" 
								android:layout_height="40px"
								android:layout_alignParentRight="true"
								>
							</RatingBar>	
						</RelativeLayout>
						<RelativeLayout 
							android:layout_marginTop="10dp"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content">
				
							<TextView 
								style="@style/MediumFont"
								android:id="@+id/places_prating"
								android:text="Prating: "
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
							<RatingBar
								style="@style/ukaRatingBar" 
								android:layout_width="wrap_content" 
								android:id="@+id/places_progressbar_prating_reported" 
								android:layout_height="40px"
								android:layout_alignParentRight="true"
								>
							</RatingBar>	
						</RelativeLayout>
						<RelativeLayout 
							android:layout_marginTop="10dp"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content">
				
							<TextView 
								style="@style/MediumFont"
								android:id="@+id/places_sjekking"
								android:text="Sjekking: "
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
							<RatingBar
								style="@style/ukaRatingBar" 
								android:layout_width="wrap_content" 
								android:id="@+id/places_progressbar_sjekking_reported" 
								android:layout_height="40px"
								android:layout_alignParentRight="true"
								>
							</RatingBar>	
						</RelativeLayout>
						<Button 
							android:layout_marginTop="5dp"
							android:id="@+id/places_report"
							android:layout_width="90dp"
					    	android:layout_height="wrap_content"
					    	style="@style/Button"
					    	android:text="Rapporter"
					    	android:layout_gravity="right"
				    	/>
						<TextView 
							android:paddingTop="10dp"
							style="@style/MediumFont"
							android:text="Si din mening om det som skjer under UKA akkurat nå!"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
						/>
						<EditText 
							android:paddingTop="5dp"
							android:id="@+id/places_comment" 
							android:layout_width="fill_parent" 
							android:layout_height="wrap_content" 
							android:inputType="textMultiLine">
						</EditText>
						<Button 
							android:layout_marginTop="5dp"
							android:id="@+id/places_share"
							android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
					    	style="@style/Button"
					    	android:text="Del kommentar"
					    	android:layout_gravity="right"
				    	/>
		    		</LinearLayout>
				</LinearLayout>
			</ScrollView>
		</LinearLayout>
	</FrameLayout>
</LinearLayout>
