<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- General themesettings -->
	<style name="CustomTheme" parent="android:Theme.Light">
<!-- 		<item name="android:background">@drawable/background</item> -->
<!-- 		<item name="android:windowBackground">@color/background_grey</item> -->
<!-- 		<item name="android:colorBackground">@color/background_grey</item> -->
	</style>


<!-- 							Buttons  														-->
	<style name="Button" parent="@style/SmallFont">
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/button_custom</item>
	</style>
	
	<style name="NewsButton" parent="@style/BigFont">
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/button_news</item>
	</style>
	
	<style name="ProgramButton" parent="@style/BigFont">
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/button_program</item>
	</style>
		
	<style name="PlacesButton" parent="@style/BigFont">
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/button_places</item>
	</style>
	
	<!-- General fontsizing -->
	<style name="BigFont" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">18dp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="MediumFont" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">14dp</item>
	</style>
	<style name="SmallFont" parent="@android:style/TextAppearance.Small">
		<item name="android:textColor">@color/black</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">12dp</item>
	</style>
	<style name="BigDayNumber" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">16dp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- EventList category button section -->
	<style name="eventCategoryButton" parent="@android:style/Widget.Button">
		<item name="android:background">@drawable/event_list_event_type_button</item>
		<item name="android:focusable">false</item>
		<item name="android:clickable">true</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:shadowColor">@color/shadowColor</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">-1</item>
		<item name="android:shadowRadius">0.2</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textAppearance">@style/BigFont</item>
	</style>

	<style name="CalendarButton" parent="@android:style/Widget.Button">
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:shadowColor">#FF000000</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">-1</item>
		<item name="android:shadowRadius">0.2</item>
		<item name="android:background">@drawable/calendar</item>
		<item name="android:focusable">false</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="MainMenuButton" parent="@android:style/Widget.Button">
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:shadowColor">#FF000000</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">-1</item>
		<item name="android:shadowRadius">0.2</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textAppearance">@style/BigFont</item>
		<item name="android:background">@drawable/event_list_event_type_button</item>
		<item name="android:focusable">false</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="FavoritesButton" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:background">@drawable/favorites_button</item>
	</style>

	<style name="HorizontalLine">
		<item name="android:background">@color/grey</item>
	</style>

	<style name="ukaRatingBar" parent="@android:style/Widget.RatingBar">
		<item name="android:progressDrawable">@drawable/uka_ratingbar</item>
	</style>
	
	<style name="ukaRatingBar2" parent="@android:style/Widget.RatingBar">
		<item name="android:progressDrawable">@drawable/uka_ratingbar</item>
	</style>

</resources>
